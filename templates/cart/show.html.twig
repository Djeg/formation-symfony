{% extends 'public.html.twig' %}

{% block subtitle %}Mon Panier{% endblock %}

{% block main %}
<div class="book-list">
  {% for ad in app.user.cart.ads %}
    <div class="book-block">
      {% if ad.pictures is not empty %}
        <div class="background-image">
          <img src="{{ ad.pictures[0] }}" alt="{{ ad.title }}" />
        </div>
      {% endif %}
      <p class="title">{{ ad.title }}</p>
      <div class="footer">
        <p class="author">
          Vendu par <br />{{ ad.author.firstname }} {{ ad.author.lastname }}
        </p>
        <p class="price">
          {{ ad.price }} €
        </p>
      </div>
      <div class="btn-group">
        <a href="{{ path('app_cart_remove', {id: ad.id}) }}" class="btn error">
          <i class="fa-solid fa-trash"></i>
          Supprimer 
        </a>
      </div>
    </div>
  {% endfor %}
</div>

<div>
  <p>Prix Total : {{ app.user.cart.totalPrice }} €</p>
</div>

<div class="btn-group">
  <a href="#" class="btn success">
    <i class="fa-solid fa-credit-card"></i>
    Valider mon achat
  </a>
</div>
{% endblock %}
