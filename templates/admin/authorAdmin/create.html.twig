{% extends 'admin/base.html.twig' %}

{% block sub_title %}
	Créez un auteur
{% endblock %}

{% block page_title %}
	Créez un auteur
{% endblock %}

{% block content %}

<div>
	<a class="button" href="{{ path('app_admin_authorAdmin_retrieve') }}">
		Retour
		<i class="fa-solid fa-arrow-left"></i>
	</a>
</div>

<form method="POST">
	<div>
		<label for="name">Nom de l'auteur :</label>
		<input
			type="text"
			name="name"
      id="name"
      value="{% block nameValue %}{% endblock %}"
    />
		</div>
		<div>
			<label for="description">Description du auteur :</label>
			<textarea id="description" name="description">
        {% block descriptionValue '' %}
      </textarea>
		</div>
		<div>
			<button type="submit" class="button">
				Envoyer
				<i class="fa-solid fa-floppy-disk"></i>
			</button>
		</div>
	</form>

{% endblock %}
