{% extends 'admin/base.html.twig' %}

{% block sub_title %}
	Créez une categorie
{% endblock %}

{% block page_title %}
	Créez une categorie
{% endblock %}

{% block content %}

<div>
	<a class="button" href="{{ path('app_admin_categoryAdmin_retrieve') }}">
		Retour
		<i class="fa-solid fa-arrow-left"></i>
	</a>
</div>

<form method="POST">
	<div>
		<label for="name">Nom de la categorie :</label>
		<input
			type="text"
			name="name"
      id="name"
      value="{% block nameValue %}{% endblock %}"
    />
		</div>
		<div>
			<button type="submit" class="button">
				Envoyer
				<i class="fa-solid fa-floppy-disk"></i>
			</button>
		</div>
	</form>

{% endblock %}
