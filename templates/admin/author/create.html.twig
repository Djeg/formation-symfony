{% extends 'base.html.twig' %}

{% block body %}
    <h1>{% block pageTitle %}Création d'un nouvel auteur{% endblock %}</h1>

    <nav>
        <a href="{{ path('app_admin_author_list') }}">Retour à la liste</a>
    </nav>

    <form method="post">
        <div>
            <label for="name">Nom de l'auteur :</label>
            <input type="text" id="name" name="name" value="{% block nameValue '' %}" />
        </div>

        <div>
            <label for="description">Description de l'auteur :</label>
            <textarea id="description" name="description">{% block descriptionValue '' %}</textarea>
        </div>

        <div>
            <label for="imageUrl">URL del l'image de l'auteur :</label>
            <input type="text" name="imageUrl" id="imageUrl" value="{% block imageUrlValue '' %}" />
        </div>

        <button type="submit">Envoyer</button>
    </form>
{% endblock %}
