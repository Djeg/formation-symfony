                <td>{{ dish.description }}</td>
                <td>{{ dish.image }}</td>
                <td>{{ dish.price }}</td>
                <td>{{ dish.type }}</td>
                <td>
                    <a href="{{ path('admin_dish_show', {'id': dish.id}) }}">show</a>
                    <a href="{{ path('admin_dish_edit', {'id': dish.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_dish_new') }}">Create new</a>
{% endblock %}
