{% extends 'base.html.twig' %}

{% block title %}Dish index{% endblock %}

{% block body %}
    <h1>Dish index</h1>


    {% if is_granted('ROLE_ADMIN') %}
      <p>Vous Ãªtes administrateur</p>
    {% endif %}
    
    {{ form(form) }}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Image</th>
                <th>Price</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
