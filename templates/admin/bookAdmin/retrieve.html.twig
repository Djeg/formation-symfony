{% extends 'admin/base.html.twig' %}

{% block sub_title %}
	Liste des livres
{% endblock %}

{% block page_title %}
	Liste des livres
{% endblock %}

{% block content %}

	<div>
		<a class="button" href="{{ path('app_admin_bookAdmin_create') }}">
			Nouveau livre
			<i class="fa-solid fa-circle-plus"></i>
		</a>
	</div>

  {{ form(formView) }}

	<table>
		<thead>
			<tr>
				<th>Id</th>
				<th>Titre</th>
				<th>Prix</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			{% for book in books %}
				<tr>
					<td>{{ book.id }}</td>
					<td>{{ book.title }}</td>
					<td>
						{{ book.price }}
						â‚¬
					</td>
					<td>
						<a class="button" href="{{ path('app_admin_bookAdmin_update', { id: book.id }) }}">
							<i class="fa-solid fa-pen"></i>
						</a>
						<a class="button" href="{{ path('app_admin_bookAdmin_delete', { id: book.id }) }}">
							<i class="fa-solid fa-trash"></i>
						</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
