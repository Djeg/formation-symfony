{% extends 'admin/base.html.twig' %}

{% block sub_title %}
	Créez un livre
{% endblock %}

{% block page_title %}
	Créez un livre
{% endblock %}

{% block content %}

<div>
	<a href="{{ path('app_admin_bookAdmin_retrieve') }}">
		Retour
		<i class="fa-solid fa-arrow-left"></i>
	</a>
</div>

<form method="POST">
	<div>
		<label for="title">Titre du livre :</label>
		<input
			type="text"
			name="title"
      id="title"
      value="{% block titleValue %}{% endblock %}"
    />
		</div>
		<div>
			<label for="price">Prix du livre :</label>
			<input
        type="number"
        min="0.01"
        max="9000"
        step="0.01"
        name="price"
        id="price"
        value="{% block priceValue '' %}"
      />
		</div>
		<div>
			<label for="description">Description du livre :</label>
			<textarea id="description" name="description">
        {% block descriptionValue '' %}
      </textarea>
		</div>
		<div>
			<button type="submit">
				Envoyer
				<i class="fa-solid fa-floppy-disk"></i>
			</button>
		</div>
	</form>

{% endblock %}
