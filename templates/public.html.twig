{% extends 'base.html.twig' %}

{% block title %}
  LookBook - {% block subtitle '' %}
{% endblock %}

{% block body %}
  {% block heroUnit '' %}
  {% block header %}
    <header class="grey-top-bar">
      <div class="centered">
        <nav class="menu">
          <p>
            <a href="{{ path('app_home_home') }}">Accueil</a>
          </p>
          <p>
            <a href="{{ path('app_home_search') }}">Rechercher</a>
          </p>
          {% if app.user %}
            <p>
              <a href="{{ path('app_account_logout') }}">Deconnexion</a>
            </p>

            {% if is_granted('ROLE_ADMIN') %}
              <p>
                <a href="{{ path('app_adminBook_list') }}">Administration</a>
              </p>
            {% endif %}
          {% else %}
            <p>
              <a href="{{ path('app_account_registration') }}">Inscription</a>
            </p>
            <p>
              <a href="{{ path('app_account_login') }}">Connexion</a>
            </p>
          {% endif %}
        </nav>
        <div class="right-bar">
          <form class="search" method="GET" action="{{ path('app_home_search') }}">
            <label for="search-input">
            <i class="fa-solid fa-magnifying-glass"></i>
            </label>
            <input type="text" name="searchText" class="search-input" id="search-input" />
          </form>
          {% if app.user %}
            <a href="{{ path('app_cart_show') }}" class="cart">
              <i class="fa-solid fa-cart-shopping"></i>
              <div class="items">
                {{ app.user.cart.ads|length }}
              </div>
            </a>
          {% endif %}
        </div>
      </div>
    </header>
  {% endblock %}

  <div class="centered-content">
    <main class="public-content">
      {% block main '' %}
    </main>
  </div>

  <footer class="footer">
    <p>LookBook - Copyright 2022</p>
  </footer>
{% endblock %}
