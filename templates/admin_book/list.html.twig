{% extends 'base.html.twig' %}

{% block title %}Admin Book - Liste des livres
{% endblock %}

{% block body %}

	<h1>Liste des livres</h1>

	<p>
		<a href="{{ path('app_admin_book_create') }}">Cr√©er un livre</a>
	</p>

	<ul>
		{% for book in books %}
			<li>
				{{book.title}}
				(#{{book.id}})
				<a href="{{ path('app_admin_book_update', {id: book.id}) }}">Modifier</a>
				<a href="{{ path('app_admin_book_remove', {id: book.id}) }}">Supprimer</a>
			</li>
		{% endfor %}
	</ul>

{% endblock %}
