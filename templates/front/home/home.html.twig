{% extends 'base.html.twig' %}

{% block body %}
<h1>{% block pageTitle %}Nos derniers livres{% endblock %}</h1>

<hr />

{% for book in books %}
    <div>
        <p>{{ book.title }}</p>
        <p>Prix : {{ book.price }} €</p>
        <p>Catégories :</p>
        <nav>
            {% for category in book.categories %}
                <a href="{{ path('app_front_category_display', {id: category.id}) }}">{{ category.name }}</a>
            {% endfor %}
        </nav>
    </div>
    <hr />
{% endfor %}

{% endblock %}
