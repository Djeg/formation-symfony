{% extends 'base.html.twig' %}

{% block body %}
    <h1>Mon Panier</h1>

    {% if app.user.basket.books|length == 0 %}
        <h2>Votre panier est vide :)</h2>
    {% endif %}

    {% for book in app.user.basket.books %}
        <div>
            <p>{{ book.title }}</p>
            <p>Prix : {{ book.price }} €</p>
            <p>
                <a href="{{ path('app_front_basket_remove', {id: book.id}) }}">Supprimer du panier</a>
            </p>
        </div>
        <hr />
    {% endfor %}

    <h2>Total : {{ app.user.basket.getTotal() }} €</h2>

    <p>
        <a href="{{ path('app_front_basket_validate') }}">Valider</a>
    </p>
{% endblock %}
